{
  "name": "library-project",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.3.3",
    "cors": "^2.8.5",
    "electron-store": "^10.0.1",
    "express": "^4.19.2",
    "lucide-react": "^0.513.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.10.0",
    "nodemon": "^3.1.3",
    "path-browserify": "^1.0.1",
    "pdfjs-dist": "^5.3.31",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.2",
    "react-bootstrap-icons": "^1.11.4",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-pdf": "^9.2.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.1",
    "redux-persist": "^6.0.0",
    "web-vitals": "^2.1.4",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run server\" \"npm run react\" \"npm run electron\"",
    "server": "node src/server/startServer.js",
    "react": "react-scripts start",
    "electron": "wait-on https://yourapp.local:3000 && electron .",
    "electron-dev": "concurrently \"npm run dev\" \"npm start\" \"wait-on https://yourapp.local:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourdomain.yalelibraryproject",
    "productName": "YaleLibraryProject",
    "files": [
      "build/**/*",
      "electron.js",
      "preload.js",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
