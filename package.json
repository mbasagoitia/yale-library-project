{
  "name": "library-project",
  "version": "0.1.0",
  "private": true,
  "main": "src/main/electron.js",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "archiver": "^7.0.1",
    "bootstrap": "^5.3.3",
    "cors": "^2.8.5",
    "ecdsa-sig-formatter": "^1.0.11",
    "electron-store": "^10.0.1",
    "express": "^4.19.2",
    "fs-extra": "^11.3.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "knex": "^3.1.0",
    "lucide-react": "^0.513.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.3",
    "mysqldump": "^3.2.0",
    "nodemon": "^3.1.3",
    "path-browserify": "^1.0.1",
    "pdfjs-dist": "^3.11.174",
    "pdfmake": "^0.2.20",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.2",
    "react-bootstrap-icons": "^1.11.4",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-pdf": "^5.7.2",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.1",
    "react-toastify": "^11.0.5",
    "redux-persist": "^6.0.0",
    "seedrandom": "^3.0.5",
    "sqlite3": "^5.1.7",
    "web-vitals": "^2.1.4",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "start:internal": "dotenv -e .env.development.internal -- concurrently \"npm run server\" \"npm run react\" \"npm run electron\"",
    "start:demo": "dotenv -e .env.development.demo -- concurrently -k -n server,react,electron -c blue,green,yellow \"npm:server\" \"npm:react\" \"npm:electron\"",
    "react": "cross-env PORT=3000 HOST=yourapp.local HTTPS=true BROWSER=none WDS_SOCKET_PORT=3000 WDS_SOCKET_HOST=yourapp.local react-scripts start",
    "server": "cross-env API_PORT=5000 node src/server/startServer.js",
    "electron": "wait-on --log --timeout 120000 tcp:3000 && cross-env ELECTRON_START_URL=https://yourapp.local:3000 electron .",
    "build:internal": "dotenv -e .env.production.internal -- react-scripts build && electron-builder -c electron-builder.internal.yml",
    "build:demo": "dotenv -e .env.production.demo -- react-scripts build && electron-builder -c electron-builder.demo.yml",
    "demo:builddb": "node scripts/demoBuilder/buildDemoDb.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourdomain.yalelibraryproject",
    "productName": "YaleLibraryProject",
    "files": [
      "build/**/*",
      "electron.js",
      "preload.js",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
